<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.LoginActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/rmedium"
        android:text="Welcome Back!"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rmedium"
        android:layout_marginLeft="24dp"
        android:textSize="20dp"
        android:text="Login To Your Account" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="444dp"
        android:layout_height="321dp"
        android:layout_gravity="right"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/login2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:text="Username"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/usernameGet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/form_input"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Input username here"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:text="Pin"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/passwordGet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/form_input"
        android:paddingLeft="15dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="***************"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/rmedium"
            android:text="Continue To Sign In"
            android:textColor="@color/blue"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_btn_login"
            android:onClick="Home" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rlight"
            android:text="Don't Have Account?"
            android:textSize="15dp"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"
            android:fontFamily="@font/rlight"
            android:textColor="@color/blue"
            android:text=" Sign Up"
            android:onClick="Register"/>
    </LinearLayout>

</LinearLayout>