            <!--                android:ems="10"-->
            <!--                android:hint="Confirm Your Password"-->
            <!--                android:inputType="textPassword"-->
            <!--                android:paddingLeft="15dp" />-->

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="No Handphone"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/noTelpGet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/form_input"
                android:ems="10"
                android:hint="Your Handphone Number"
                android:inputType="textPersonName"
                android:paddingLeft="15dp" />

            <TextView
                android:id="@+id/textView24563"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Gender"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/genderGet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/form_input"
                android:ems="10"
                android:hint="Your Gender"
                android:inputType="textPersonName"
                android:paddingLeft="15dp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Address"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/addressGet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/form_input"
                android:ems="10"
                android:hint="Your Adddress"
                android:inputType="textPersonName"
                android:paddingLeft="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/rmedium"
                    android:text="Continue To Sign Up"
                    android:textColor="@color/blue"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_btn_login" />
            </LinearLayout>
        </LinearLayout>
