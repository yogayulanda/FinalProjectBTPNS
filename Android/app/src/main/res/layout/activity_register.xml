<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_arrow"
            android:onClick="Back"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="127dp"
            android:layout_height="60dp"
            android:layout_marginLeft="-40dp"
            android:layout_weight="1"
            android:fontFamily="@font/rmedium"
            android:gravity="center"
            android:text="Create New \n Your Account"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="169dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:text="Fullname"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/fullNameGet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_input"
                android:ems="10"
                android:hint="Input Fullname"
                android:inputType="textPersonName"
                android:paddingLeft="15dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Email"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/emailGet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/form_input"
                android:ems="10"
                android:hint="Input Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp" />

            <TextView
                android:id="@+id/textView81"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:text="Username"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/usernameGet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_input"
                android:ems="10"
                android:hint="Input Username"
                android:inputType="textPersonName"
                android:paddingLeft="15dp" />

            <TextView
                android:id="@+id/textView811"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:text="Password"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/passwordGet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_input"
                android:ems="10"
                android:hint="Input Your Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp" />

            <!--            <TextView-->
            <!--                android:id="@+id/textView8"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginLeft="24dp"-->
            <!--                android:layout_marginRight="24dp"-->
            <!--                android:layout_marginBottom="10dp"-->
            <!--                android:text="Confirm Password"-->
            <!--                android:textSize="15dp" />-->

            <!--            <EditText-->
            <!--                android:id="@+id/confirmPasswordEditText"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:layout_marginLeft="24dp"-->
            <!--                android:layout_marginRight="24dp"-->
            <!--                android:layout_marginBottom="10dp"-->
